---
import Layout from "@layouts/Layout.astro";

import Hero from "@components/Hero.astro";
import HeroImg from "/src/assets/images/header.jpg";
import Header from "/workspaces/victorian-child/src/components/Header.astro";
import Card from "@components/Card.astro";
import Accordian from "@components/Accordian.astro";
import CardReverse from "@components/Card-Reverse.astro";

import Whatchild from "/workspaces/victorian-child/src/components/Markdown/WhatChild.md";
import Whatcoma from "/workspaces/victorian-child/src/components/Markdown/WhatComa.md";
import Why from "/workspaces/victorian-child/src/components/Markdown/Why.md"
import How from "/workspaces/victorian-child/src/components/Markdown/How.md"

import V2 from "/workspaces/victorian-child/src/assets/images/childsleep.avif";
import V1 from "/workspaces/victorian-child/src/assets/images/victorianchild1.avif";
import V3 from "/workspaces/victorian-child/src/assets/images/the-cleveland-museum-of-art-ELD31iIlk5s-unsplash.jpg"
import V4 from "/workspaces/victorian-child/src/assets/images/europeana-Jn8V5dHrdnM-unsplash.jpg"

import Footer from "@components/Footer.astro";

---

<Layout>
  <Header>  
  </Header>
  <Hero imgSrc={HeroImg} >
    <h1 slot="header"> Send a Victorian Child into a Coma:</h1>
  </Hero>
  
  <section id="vchild">
    <Card title="What is a Victorian Child?" imgSrc={V1} alt="Victorian Child" ctaUrl="/">
      <Whatchild/>
    </Card>     
  </section>
  
  <section id="coma">
    <CardReverse title="What is a Coma?" imgSrc={V2} ctaUrl="/">
      <Whatcoma/>
    </CardReverse>     
  </section>
  
  <section id="top10" class="top">
    <h2>Top 10 Ways to Send a Victorian Child into a Coma</h2>
      <div class="accordian">
    <Accordian title="Make Them Play a Game of Fortnite Battle Royale">
      A flying bus drops them onto an island where Sabrina Carpenter is running around with a bazooka. Neon dance moves, chaotic building, and tween war cries. They wouldn’t survive the chorus.
    </Accordian>
    <Accordian title="Make Them Drink McDonald’s Sprite">
      Bubbles, sugar, and fizz overload. Their lungs wouldn’t stand a chance.
    </Accordian>
    <Accordian title="Introduce Them to Red 40">
      Sour Patch Kids, Nerds Gummy Clusters, Takis, Depression, Gut Problems.
    </Accordian>
    <Accordian title="Make Them Watch a Drag Race Lip Sync">
      Dramatic faces, glitter, high kicks, and sudden splits. Unholy levels of camp.
    </Accordian>
    <Accordian title="Drag Queens">
      Singing, dancing, towering wigs, and over-the-top gestures. Total sensory shock.
    </Accordian>
    <Accordian title="Make Them Eat Taco Bell in a Car While Blasting an Early 2000s Playlist">
      Crunchwraps, Britney Spears, and neon-colored Baja Blast. Apocalypse in a tortilla.
    </Accordian>
    <Accordian title="Show Them the 2024 US Presidential Debate Between Trump and Biden">
      Two old men yelling, confusing arguments, and an audience clapping at the wrong times. Their monocles would shatter.
    </Accordian>
    <Accordian title="Show Them the 2024 Election Results">
      Angry captions, confusing hashtags, and nonstop notifications. Brain meltdown guaranteed.
    </Accordian>
    <Accordian title="Idk Show Them an iPhone or Something?">
      A glowing glass brick that plays moving pictures, talks back, and knows where you are at all times. Pure witchcraft.
    </Accordian>
    <Accordian title="Show Them Grindr">
      Unexpected adult content, cryptic abbreviations, and dating chaos in your pocket. Absolutely fatal.
    </Accordian>
    </div>
  </section>

  <section id="Why">
    <Card title="Why send a Victorian child into a coma?" imgSrc={V3} alt="Victorian Child" ctaUrl="/">
      <Why/>
    </Card>     
  </section>
  
  <section id="How">
    <CardReverse title="How to Find a Victorian Child:" imgSrc={V4} ctaUrl="/">
      <How/>
    </CardReverse>     
  </section>
  <section id="contact">
  <footer>
    <Footer/>
  </section>
</Layout>

<style>
  body {
    margin: 0;
    padding: 0;
  }
  .top { 
    background-color: white;
    padding: var(--padding);
    background-image:url("/workspaces/victorian-child/src/assets/images/photo-1726329143715-c546204d00a1.avif");
  }
  .accordian {
    margin: var();
  }
  .top h2 {
    background-color: rgba(0, 0, 0, 0.911);
    padding: var(--padding);
    border-radius: var(--border-radius);
    margin: var(--margin)
  }

  h2 {
    text-align: center;
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  
 
</style>

<style is:global>

  header h1 {
    font-size: 2.5rem;
    text-align: left;
    color: white;

  }
   ul {
    list-style-type: disc;
    padding-left: 1.5rem; 
    }
  button a.btn:hover {
      mix-blend-mode:difference;
  }
  
</style>

