---
// we can import fonts here, after installing them via Fontsource
// see https://fontsource.org/docs/installation for instructions
import '@fontsource/unifrakturmaguntia';
import '@fontsource-variable/crimson-pro';
---

<style is:global>
  /* We can use this style tag to set up colors, fonts, etc. */
  :root {
    --color-background: rgb(0, 0, 0);
    --color-text: rgb(240, 240, 240);
    --color-accent: #FFFF00;
    --color-focus-ring: rgb(255, 0, 255);

    --font-body:'Crimson Pro Variable', serif;;
    --font-headings:'UnifrakturMaguntia';

    --margin: 10px;
    --padding: 10px 20px;

    --border-radius: 20px;
    --box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);

    font-size: 18px;

    /* These sizes are used by the Container component to set up the page container */
    --size-page-width: 800px;
    --size-page-padding: 1rem;

    @media (max-width: 1100px) {
      --border-radius: .5rem;
      --box-shadow: 0 12px 24px rgba(0, 0, 0, 0.207);

      --padding: 5px 10px;
    }
  }

  /* We can also apply these colors as a default */
  body {
    background-color: var(--color-background);
    color: var(--color-text);
    font-family: var(--font-body);
    line-height: 2;
    font-size: .8rem;

  }
  h1{
    font-family: var(--font-headings);
    font-size: 10vw;
    color:var(--color-accent);
    line-height: normal;
    
  }
  h2 {
    line-height: normal;
  }

  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-body);
    font-weight: bold;
  }

  /* default focus ring styles */
  *:focus-visible {
    outline: 3px solid var(--color-focus-ring);
  }
  

</style>
