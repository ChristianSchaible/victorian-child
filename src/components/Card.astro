---
const { title = "Card", imgSrc } = Astro.props;
import { Image } from "astro:assets";
---

<section class="card-section">
  <div class="container">
    <Image src={imgSrc} alt="Victorian Child" class="main-image" />
    <div class="card">
      <h2>{title}</h2>
      <slot />
    </div>
  </div>
</section>

<style>
  .card-section {
    background-color: var(--color-accent);
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding: 4rem;
  }

  .container {
    position: relative;
    width: 80%;
    max-width: 1200px;
  }

  .main-image {
    width: 100%;
    height: auto;
    fit: cover;
    display: block;
    border-radius: 10px;
  }

  .card {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translate(-20%, -50%);
    background-color: rgba(0, 0, 0, 0.911);
    color: white;
    border-radius: 20px;
    padding: 3rem;
    width: 40vw;
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.5);
    z-index: 2;
  }

  .card h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }


  @media (max-width: 1100px) {
    .card-section {
      padding: 2rem;
    }
    .container {
      width: 95%;
    }

    .card {
      position: relative;
      transform: none;
      left: 0;
      top: 0;
      width: 100%;
      margin-top: 1.5rem;
    }
  }
</style>
